<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/swipeRecyclerView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f5f8"
    tools:context=".downloaders.Activities.FB_BrowserActivity"
    tools:showIn="@layout/activity_f_b__browser">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:progressDrawable="@drawable/layer_list"
            android:visibility="invisible"/>

        <WebView
        android:id="@+id/webViewFb"
            android:layout_below="@id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>
    </RelativeLayout>
</RelativeLayout>